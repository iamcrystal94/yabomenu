/**index.wxss**/
body{
  margin: 0;
  padding: 0;
}
.container{
  display: flex; 
  margin: 0;
  padding: 0;
}

.header{
  background: red;
  width: 100%;
  height: 130rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
  margin: 0rpx;
  padding: 0rpx;
  color: white;
  /* text-align: center; */
}

.title{
  display: inline-block;
   width: 100%; 
   height:100 rpx; 
   line-height: 100rpx; 
  font-size: 70rpx;
  text-align: center;
}
.info{
  width: 100%; 
  text-align: center;
  font-size: 20rpx;
  height: 20rpx;
}

.menu{
  width: 100%;
  overflow: auto;
  top:130rpx;
  bottom:120rpx;
  position: absolute;
  z-index: 100;
}

.leibie{
  /* flex-grow:1; */
  /* display: absolute; */
  float: left;  
  width: 20%;
  height: 100%;
  background: #F0F0F0;
  text-align: center;
  /* margin:30rpx; */
}
.detail{
  /* flex-grow:5; */
  /* margin: 30rpx; */
  overflow: auto;
  /* background: greenyellow; */
  height: 100%;
  width:70%;
  padding-left: 10%;
  font-size: 50rpx;
}
.normal{
  height:10%;
  padding: 10%;
  /* color:#6C6C6C; */
}
.item{
  height: 80rpx;
}
.checked{
  height:10%;
  padding: 10%;
}
.name{
  display: inline-block;
  width:150rpx;
  margin-right: 20rpx;
}
.num{
  display: inline-block;
  width: 50rpx;
}
.price{
  display: inline-block;
  width: 100rpx;
  color: red;
  /* margin-right: 10rpx; */
}


.button{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx;
  border:1px solid #ccc;
  text-align: center;
  line-height: 40rpx;
  border-radius: 20rpx;
  font-size: 40rpx;
}
.add{
  background: red;
}
.count{
  display: inline-block;
  float: right;
  margin-right: 10rpx;  
}
.footer{
  margin: 0;
  padding: 0;
  height:120rpx;
  z-index: 200;
  width: 100%;
  background: #272727;
  position: absolute;
  bottom: 0;
  line-height: 120rpx;
  font-size: 50rpx;
}
.car{
  display: inline-block;
  width: 30%;
  height:120rpx;
  /* background: red; */
  color:#ffffff;
  float: left;
  line-height: 120rpx;
  
}
.total{
  display: inline-block;
  width: 30%;
  height:100rpx;
  color:#ffffff;
  line-height: 120rpx;
  text-align: center;
  font-size: 50rpx;
  padding-bottom: 20rpx;

}
.order{
  float: right;
  display: inline-block;
  width: 30%;
  height:120rpx;
  background: red;
  color:#ffffff;
  line-height: 120rpx;
}
.shopcarbg{
  background:rgba(0,0,0,0.5) ;
  
  z-index: 500;
  width: 100%;
  position: absolute;
  top:0;
  left: 0;
  bottom: 120rpx;
}
.shopcar{
  z-index: 600;
  /* opacity: 1; */
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  background: #ffffff;
  font-size: 50rpx;
}
.cleancar{
  text-align: right;
  height: 70rpx;
  background: #F0F0F0;
}
.orderitem{
 width: 100%;
 height: 70rpx;
 padding: 10rpx;
 margin-right:50rpx;
 /* margin-left: 10rpx; */
 border-bottom: 1px solid #F0F0F0;
}
.ordername{
  display: inline-block;
  margin-left: 50rpx;
  width:150rpx;
}
.orderprice{
  display: inline-block;
  width: 100rpx;
  color: red;
  margin-left: 200rpx;
}
